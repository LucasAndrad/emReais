<div class="coins-container">
  <h1 class="coins-index-title" > Moedas </h1> 
  <%= link_to 'Home' , home_path, class: 'button button-home'%>
  <% @coins.each do |coin| %>

    <div class="coin-container">
      <div class="coin-title-name">
        <%= link_to coin.name, coin_show_path(coin, url_name: coin.url_name), class: 'coin-name-link' %>
      </div>
      <img src="<%= coin.flag %>" alt="<%= coin.country%> Flag" class="flag-coins-index">
      <p class"coin-country-index">
        <%= coin.country %>
      </p>

      <div class="coin-value">
        1 <%= coin.symbol %> = <%= InoxConverter.convertCurrency(1, coin.code, "BRL").round(4) %> 
        <br> <br>
        <%= link_to "Novos valores", coin_show_path(coin, url_name: coin.url_name) %>
      </div>
    </div>

  <% end %>
</div>